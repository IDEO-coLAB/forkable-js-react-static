{
  "extends": "airbnb-base",
  "env": {
    "browser": true,
    "node": true
  },
  "plugins": [
  	"react"
   ],
  "parserOptions": {
	  "ecmaFeatures": {
	    "jsx": true
  	}
  },
  "rules": {
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
  	"semi": ["error", "never"],
    "class-methods-use-this": "off"
  }
}


